<%- include("navbar.ejs")%>
<form action="/admin/update_slider/<%=slides.slider_id %>" method="post" enctype="multipart/form-data">
<div class="container-fluid p-5 bg-white ">
    <div class="row">
        <div class="col-md-12  text-center">
            <h3>Update Slider</h3>
        </div> 
        <div class="col-md-6 mt-3">
            Select Image<input type="file" name="slider_img" value="<%=slides.slider_img %>""  class="form-control" accept="image/*">
        </div>
        <div class="col-md-6 mt-3">
            Enter Slider Title 
            <input type="text" name="slider_title" value="<%=slides.slider_title %>" class="form-control">
        </div>
        <div class="col-md-6 mt-3">
            Enter Button Text
            <input type="text" name="slider_btn_text" value="<%=slides.slider_btn_text %>" class="form-control">
        </div>
        <div class="col-md-6 mt-3">
            Enter Slider button link
            <input type="text" name="slider_btn_link" value="<%=slides.slider_btn_link %>" class="form-control">
        </div>
        <div class="col-md-12  mt-3 text-center" >
         <button class="btn btn-primary">Save slider</button>
        </div>
        <div class="col-md-6 mt-3">
            <h3>Selected Image</h3>
            <img src="/uploads/<%=slides.slider_img %>" alt="" width="200px">
        </div>
    </div>
</div>
</form>
<%- include("footer.ejs")%>